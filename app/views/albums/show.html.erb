
<div id="header_area">
    <% title h(@album.name) %>
    <h3 id="photos_count"><%= pluralize(@album.assets.size, "Photo")%></h3>
    <%= render :partial => "show" %>
    <% form_for Asset.new(:album_id => @album.id), :html => {:multipart => true} do |f| %> 
      <%= f.hidden_field :album_id, "value" => @album.id %>
      <%= f.file_field :photo %> 
    <% end %>
    <%= link_to "All albums", albums_path %>
</div>

<div id="photo_area">
    <div id="asset_list"> 
        <%= render :partial => @album.assets %>
    </div>
    <div id="preview_pane">
        <% if @album.assets.size!=0 %>
            <div id="preview_image">
                <%= render :partial => "preview_photo", :object => @preview_photo %>
            </div>
        <% end %>
         <div id="prevNext">
             <% form_remote_tag :url => { :action => 'get_photo', :album_id =>@album.id } do %>
               <%= image_submit_tag "leftarrow.png", :value=>"left", :name => "arrowbutton" %>
               <%= image_submit_tag "rightarrow.png", :value=>"right", :name => "arrowbutton" %>
             <% end %>
         </div>
    </div>
</div>

<div id="footer_area">
</div>